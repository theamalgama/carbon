{
  "lerna": "3.13.4",
  "version": "independent",
  "npmClient": "yarn",
  "npmClientArgs": ["--frozen-lockfile"],
  "useWorkspaces": true,
  "ignoreChanges": [
    "actions/**",
    "codemods/**",
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/docs/**",
    "**/e2e/**",
    "**/examples/**",
    "**/*.md"
  ],
  "command": {
    "publish": {
      "registry": "https://npm.pkg.github.com/theamalgama"
    }
  }
}
